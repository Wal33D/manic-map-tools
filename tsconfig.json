{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "*.ts",
    "*.js",
    "src/**/*.ts",
    "scripts/*.ts",
    "scripts/*.js",
    "scripts/db/uploadHognoseCatalog.ts",
    "scripts/db/downloadCollectionFromMongoDB.ts"
  ]
}
